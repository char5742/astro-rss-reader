---
interface Props {
  keywords?: string[];
}

const { keywords = [] } = Astro.props;
---

<div class="keyword-chips">
  {
    keywords.map((keyword) => (
      <span class="keyword-chip">
        {keyword}
        <button class="remove-keyword" aria-label="削除">
          ×
        </button>
      </span>
    ))
  }
  <button class="add-keyword">+ 追加</button>
</div>

<style>
  .keyword-chips {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    padding-top: var(--spacing-sm);
  }

  .keyword-chip {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--neutral);
    border-radius: var(--border-radius-md);
    font-size: var(--font-size-sm);
  }

  .remove-keyword {
    border: none;
    background: none;
    color: var(--text-secondary);
    font-size: var(--font-size-md);
    padding: 0;
    cursor: pointer;
  }

  .add-keyword {
    padding: var(--spacing-sm) var(--spacing-md);
    border: 1px dashed var(--neutral);
    border-radius: var(--border-radius-md);
    background: none;
    color: var(--primary);
    font-size: var(--font-size-sm);
    cursor: pointer;
  }
</style>
