---
import { Icon } from "astro-icon/components";
import type { Feed, FeedCategoryId, FeedId } from "~/types/feed";

// type Props = {
//   feedList: Feed[];
// };

// const { feedList } = Astro.props as Props;
const feedList = [
  {
    id: "abc123" as FeedId,
    title: "TechCrunch",
    url: "https://techcrunch.com/feed",
    categoryIds: ["tech" as FeedCategoryId],
  },
] satisfies Feed[];
---

<aside class="sidebar">
  <header>
    <nav>
      <ul role="list">
        <li>
          <a href="/astro-rss-reader/settings" title="設定">
            <Icon name="settings" />
            <span class="sr-only">設定</span>
          </a>
        </li>
        <li>
          <a href="/astro-rss-reader/search" title="検索">
            <Icon name="search" />
            <span class="sr-only">検索</span>
          </a>
        </li>
        <li>
          <a href="/astro-rss-reader/bookmarks" title="ブックマーク">
            <Icon name="bookmark" />
            <span class="sr-only">ブックマーク</span>
          </a>
        </li>
      </ul>
    </nav>
  </header>

  <div class="feed-section">
    <h2>フィード一覧</h2>
    <ul role="list">
      {
        feedList.map((feed) => (
          <li>
            <a href={`/astro-rss-reader/articles`}>{feed.title}</a>
          </li>
        ))
      }
    </ul>
  </div>
</aside>

