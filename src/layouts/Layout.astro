---
import "~/styles/globals.css";
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Modern RSS Reader" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/astro-rss-reader/favicon.svg"
    />
    <title>{title ? `${title} | RSS Reader` : "RSS Reader"}</title>
  </head>
  <body>
    <div class="app-layout">
      <aside class="sidebar">
        <nav class="main-nav">
          <ul>
            <li><a href="/astro-rss-reader/">ホーム</a></li>
            <li><a href="/astro-rss-reader/feeds">フィード管理</a></li>
            <li><a href="/astro-rss-reader/articles">記事一覧</a></li>
            <li><a href="/astro-rss-reader/search">検索</a></li>
            <li><a href="/astro-rss-reader/bookmarks">ブックマーク</a></li>
            <li><a href="/astro-rss-reader/settings">設定</a></li>
            <li><a href="/astro-rss-reader/notifications">通知</a></li>
          </ul>
        </nav>
      </aside>
      <main class="main-content">
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  .app-layout {
    display: grid;
    grid-template-columns: 240px 1fr;
    min-height: 100vh;
  }

  .sidebar {
    background-color: var(--background);
    border-right: 1px solid var(--neutral);
    padding: var(--spacing-md);
  }

  .main-nav ul {
    list-style: none;
  }

  .main-nav a {
    display: block;
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: 6px;
    color: var(--text-primary);
    text-decoration: none;
  }

  .main-nav a:hover {
    background-color: var(--neutral);
  }

  .main-content {
    padding: var(--spacing-lg);
  }

  @media (max-width: 768px) {
    .app-layout {
      grid-template-columns: 1fr;
    }

    .sidebar {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      z-index: 10;
      border-right: none;
      border-top: 1px solid var(--neutral);
    }

    .main-nav ul {
      display: flex;
      justify-content: space-around;
    }

    .main-nav a {
      padding: var(--spacing-sm);
      text-align: center;
    }
  }
</style>
