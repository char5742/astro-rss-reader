---
import Layout from "~/layouts/Layout.astro";
---

<Layout title="ホーム">
  <div class="dashboard">
    <header>
      <h1>ダッシュボード</h1>
    </header>

    <section class="feed-overview">
      <h2>フィード一覧</h2>
      <div class="feed-grid">
        <article>
          <h3>Tech News</h3>
          <p class="unread">12 件の未読</p>
          <div class="stats">
            <span>総記事数: 156</span>
            <span>更新: 10分前</span>
          </div>
        </article>
        <article>
          <h3>Design Weekly</h3>
          <p class="unread">5 件の未読</p>
          <div class="stats">
            <span>総記事数: 89</span>
            <span>更新: 2時間前</span>
          </div>
        </article>
      </div>
    </section>

    <section class="latest-articles">
      <h2>最新記事</h2>
      <div class="article-list">
        <article>
          <header>
            <h3>記事タイトル</h3>
            <time datetime="2024-02-20">2024.02.20</time>
          </header>
          <p>記事の要約テキストがここに表示されます...</p>
          <footer>
            <span class="source">Tech News</span>
            <button class="bookmark">ブックマーク</button>
          </footer>
        </article>
      </div>
    </section>
  </div>
</Layout>

<style>
  .dashboard {
    max-width: var(--grid-max-width);
    margin: 0 auto;
    padding: var(--spacing-md);

    > header {
      margin-bottom: var(--spacing-lg);

      h1 {
        font-size: 2rem;
        color: var(--text-primary);
      }
    }
  }

  .feed-overview,
  .latest-articles {
    margin-bottom: var(--spacing-lg);

    h2 {
      font-size: 1.5rem;
      margin-bottom: var(--spacing-lg);
      color: var(--text-primary);
    }
  }

  .feed-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);

    article {
      background: var(--background);
      border: 1px solid var(--neutral);
      border-radius: 8px;
      padding: var(--spacing-md);

      h3 {
        margin-bottom: var(--spacing-sm);
        color: var(--text-primary);
      }

      .unread {
        font-weight: 500;
        color: var(--primary);
        margin-bottom: var(--spacing-sm);
      }

      .stats {
        display: flex;
        justify-content: space-between;
        color: var (--text-secondary);
        font-size: var(--font-size-sm);
      }
    }
  }

  .article-list {
    display: grid;
    gap: var(--spacing-md);

    article {
      background: var(--background);
      border: 1px solid var(--neutral);
      border-radius: 8px;
      padding: var(--spacing-md);

      header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: var(--spacing-sm);

        h3 {
          font-size: 1.25rem;
          color: var(--text-primary);
        }

        time {
          font-size: var(--font-size-sm);
          color: var(--text-secondary);
        }
      }

      p {
        font-size: var(--font-size-sm);
        color: var(--text-secondary);
        margin-bottom: var(--spacing-md);
      }

      footer {
        display: flex;
        justify-content: space-between;
        align-items: center;

        .source {
          font-size: var(--font-size-sm);
          color: var(--text-secondary);
        }

        .bookmark {
          font-size: var(--font-size-sm);
          color: var(--primary);
          background: none;
          border: none;
          padding: 0;
          cursor: pointer;
        }
      }
    }
  }

  .stats {
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
  }

  .unread {
    color: var(--primary);
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .feed-grid {
      grid-template-columns: 1fr;
    }

    .article-list article header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
