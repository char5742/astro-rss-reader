---
import Layout from "~/layouts/Layout.astro";
---

<Layout title="フィード管理">
  <div class="container">
    <header class="container-header">
      <h1>フィード管理</h1>
      <div class="container-actions">
        <button class="btn primary">新規フィード追加</button>
        <button class="btn secondary">OPMLインポート</button>
        <button class="btn secondary">OPMLエクスポート</button>
      </div>
    </header>

    <section>
      <h2>カテゴリー管理</h2>
      <div class="container-grid">
        <article class="item-container">
          <div class="item-header">
            <h3>テクノロジー</h3>
            <span class="container-meta">5フィード</span>
          </div>
          <div class="container-actions">
            <button class="btn secondary">編集</button>
            <button class="btn secondary">削除</button>
          </div>
        </article>
      </div>
    </section>

    <section>
      <h2>フィード一覧</h2>
      <div class="container-list">
        <article class="item-container">
          <div class="item-content">
            <h3 class="item-title">TechCrunch</h3>
            <p class="item-description">https://techcrunch.com/feed</p>
            <span class="tag">テクノロジー</span>
          </div>
          <div class="container-meta">
            <span>200記事</span>
            <span>最終更新: 10分前</span>
          </div>
          <div class="container-actions">
            <button class="btn secondary">編集</button>
            <button class="btn danger">削除</button>
          </div>
        </article>
      </div>
    </section>
  </div>
</Layout>

