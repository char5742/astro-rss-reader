<style>
  .articles {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--spacing-md);

    > header {
      margin-bottom: var(--spacing-lg);

      .header-content {
        margin-bottom: var(--spacing-lg);

        h1 {
          margin-bottom: var(--spacing-sm);
        }

        .source {
          color: var(--text-secondary);
        }
      }

      .controls {
        display: flex;
        gap: var(--spacing-md);
        align-items: center;

        .filter {
          display: flex;
          gap: var(--spacing-sm);
        }

        .view {
          display: flex;
          gap: var(--spacing-sm);
        }

        select {
          padding: var(--spacing-sm) var(--spacing-md);
          border: 1px solid var(--neutral);
          border-radius: 6px;
          background: var(--background);
        }
      }
    }
  }

  .article-list {
    display: grid;
    gap: var(--spacing-md);

    article {
      background: var(--background);
      border: 1px solid var(--neutral);
      border-radius: 8px;
      padding: var(--spacing-md);

      .meta {
        display: flex;
        justify-content: space-between;
        margin-bottom: var(--spacing-sm);

        time {
          color: var (--text-secondary);
        }

        .status {
          color: var(--primary);
        }
      }

      h2 {
        margin-bottom: var(--spacing-md);
        font-size: var(--font-size-lg);

        a {
          color: var(--text-primary);
          text-decoration: none;

          &:hover {
            color: var(--primary);
          }
        }
      }

      p {
        color: var(--text-secondary);
        margin-bottom: var(--spacing-md);
        line-height: 1.6;
      }

      footer {
        display: flex;
        justify-content: space-between;
        align-items: center;

        .tags {
          display: flex;
          gap: var(--spacing-sm);

          span {
            padding: 2px 8px;
            background: var(--neutral);
            border-radius: 4px;
            font-size: var(--font-size-sm);
          }
        }

        .actions {
          display: flex;
          gap: var(--spacing-sm);
        }
      }
    }
  }

  footer {
    display: flex;
    justify-content: center;
    margin-top: var(--spacing-xl);
  }

  @media (max-width: 768px) {
    .articles {
      header .controls {
        flex-direction: column;
        align-items: stretch;
      }
    }
  }
</style>
