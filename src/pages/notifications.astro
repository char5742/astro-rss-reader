<style>
	.notifications-page {
		max-width: 800px;
		margin: 0 auto;
		padding: var(--space-md);
	}

	.page-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: var(--space-xl);
	}

	.header-actions {
		display: flex;
		gap: var(--space-sm);
	}

	.btn {
		padding: var(--space-sm) var(--space-md);
		border-radius: 6px;
		font-size: 0.875rem;
		font-weight: 500;
	}

	.btn.secondary {
		background: var(--color-surface);
		border: 1px solid var(--color-border);
		color: var(--color-text);
	}

	.notifications-section {
		margin-bottom: var(--space-xl);
	}

	.notifications-section h2 {
		font-size: 1rem;
		color: var(--color-text-secondary);
		margin-bottom: var(--space-md);
	}

	.notification-list {
		display: grid;
		gap: var(--space-sm);
	}

	.notification-item {
		display: flex;
		gap: var(--space-md);
		padding: var(--space-md);
		background: var(--color-surface);
		border: 1px solid var(--color-border);
		border-radius: 8px;
	}

	.notification-item.unread {
		background: var(--color-background);
		border-left: 3px solid var(--color-primary);
	}

	.notification-icon {
		font-size: 1.5rem;
		width: 2rem;
		height: 2rem;
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--color-border);
		border-radius: 8px;
	}

	.notification-content {
		flex: 1;
	}

	.notification-header {
		display: flex;
		justify-content: space-between;
		align-items: start;
		margin-bottom: var(--space-xs);
	}

	.notification-header h3 {
		font-size: 1rem;
		color: var(--color-text);
	}

	.notification-header time {
		font-size: 0.875rem;
		color: var(--color-text-secondary);
	}

	.notification-content p {
		color: var(--color-text-secondary);
		font-size: 0.875rem;
		margin-bottom: var(--space-sm);
	}

	.notification-actions {
		display: flex;
		gap: var(--space-sm);
	}

	.action-link {
		color: var(--color-primary);
		font-size: 0.875rem;
		text-decoration: none;
	}

	.action-link:hover {
		text-decoration: underline;
	}

	.keyword-settings {
		background: var(--color-surface);
		border: 1px solid var(--color-border);
		border-radius: 8px;
		padding: var(--space-md);
	}

	.keyword-list {
		display: grid;
		gap: var(--space-sm);
		margin-bottom: var(--space-md);
	}

	.keyword-item {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.keyword-tag {
		padding: var(--space-xs) var(--space-sm);
		background: var(--color-border);
		border-radius: 16px;
		font-size: 0.875rem;
	}

	.toggle {
		position: relative;
		display: inline-block;
		width: 50px;
		height: 24px;
	}

	.toggle input {
		opacity: 0;
		width: 0;
		height: 0;
	}

	.toggle-slider {
		position: absolute;
		cursor: pointer;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-color: var(--color-border);
		transition: 0.4s;
		border-radius: 24px;
	}

	.toggle-slider:before {
		position: absolute;
		content: "";
		height: 20px;
		width: 20px;
		left: 2px;
		bottom: 2px;
		background-color: white;
		transition: 0.4s;
		border-radius: 50%;
	}

	.toggle input:checked + .toggle-slider {
		background-color: var(--color-primary);
	}

	.toggle input:checked + .toggle-slider:before {
		transform: translateX(26px);
	}

	.settings-link {
		display: block;
		text-align: center;
		color: var(--color-primary);
		font-size: 0.875rem;
		text-decoration: none;
	}

	.settings-link:hover {
		text-decoration: underline;
	}

	@media (max-width: 768px) {
		.page-header {
			flex-direction: column;
			align-items: stretch;
			gap: var(--space-md);
		}

		.header-actions {
			flex-direction: column;
		}

		.notification-item {
			flex-direction: column;
		}

		.notification-icon {
			width: 1.5rem;
			height: 1.5rem;
			font-size: 1rem;
		}
	}
</style>
