---
import Layout from "~/layouts/Layout.astro";
---

<Layout title="通知センター">
  <div class="container">
    <header class="container-header">
      <h1>通知センター</h1>
      <div class="container-actions">
        <button class="btn secondary">既読にする</button>
        <button class="btn secondary">すべて消去</button>
      </div>
    </header>

    <div class="notification-groups">
      <section>
        <h2>今日</h2>
        <div class="container-list">
          <article class="item-container unread">
            <div class="item-content">
              <div class="item-header">
                <img src="/bell-icon.svg" alt="" />
                <time datetime="2024-02-20T10:30:00">10:30</time>
              </div>
              <h3 class="item-title">新着記事</h3>
              <p class="item-description">Tech Newsに3件の新着記事があります</p>
              <div class="container-actions">
                <a href="/astro-rss-reader/articles" class="btn secondary"
                  >記事を見る</a
                >
              </div>
            </div>
          </article>

          <article class="item-container unread">
            <div class="item-content">
              <div class="item-header">
                <img src="/target-icon.svg" alt="" />
                <time datetime="2024-02-20T09:15:00">09:15</time>
              </div>
              <h3 class="item-title">キーワードマッチ：AI</h3>
              <p class="item-description">
                指定したキーワード "AI" を含む新着記事が見つかりました
              </p>
              <div class="container-actions">
                <a href="/astro-rss-reader/articles/1" class="btn secondary"
                  >記事を読む</a
                >
              </div>
            </div>
          </article>
        </div>
      </section>

      <section>
        <h2>昨日</h2>
        <div class="container-list">
          <article class="item-container">
            <div class="item-content">
              <div class="item-header">
                <img src="/inbox-icon.svg" alt="" />
                <time datetime="2024-02-19T18:45:00">18:45</time>
              </div>
              <h3 class="item-title">フィード更新完了</h3>
              <p class="item-description">
                すべてのフィードの同期が完了しました
              </p>
            </div>
          </article>
        </div>
      </section>

      <section class="keywords">
        <h2>キーワード通知設定</h2>
        <div class="tag-list">
          <label class="tag">
            AI
            <input type="checkbox" checked />
          </label>
          <label class="tag">
            Machine Learning
            <input type="checkbox" checked />
          </label>
        </div>
        <div class="container-actions">
          <a href="/astro-rss-reader/settings" class="btn secondary"
            >通知設定を編集</a
          >
        </div>
      </section>
    </div>
  </div>
</Layout>

